<%= link_to_function "Fechar", update_page {|page|
page['question_view'].hide
  } %>
<p>
  <b>Text:</b>
  <%=h @question.text %>
</p>
<%= link_to_function "Nova Resposta", update_page {|page|
page['answer_new'].show
page['answer[question_id]'].value = @question.id
page['answer_form'].reset
  } %>
<%= render :partial => 'answers/list', :locals => {:answers => @question.answers } %>
