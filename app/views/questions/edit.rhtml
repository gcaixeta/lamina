<h1>Editing question</h1>

<%= error_messages_for :question %>

<% form_for(:question, :url => question_path(@question), :html => { :method => :put }) do |f| %>
  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', question_path(@question) %> |
<%= link_to 'Back', questions_path %>