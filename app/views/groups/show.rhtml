<h3><%= @group.name %></h3>
<p style="color:red"> AVISO: Ajax pesado em 2 segundos </p>
<div id="last_message"></div>
<div id="messages">
</div>
  <%= render :partial => 'messages/form', :locals => {:group =>@group.id} %>
  
<%=  javascript_tag "var ver = '0'; var lastver = '0'"  %>
<%= periodically_call_remote( 
:url => {:action => :message },
:with => "'ver=' + ver + '&lastver=' + lastver + '&id=#{params[:id]}'",  
:frequency => 2.0) %>
