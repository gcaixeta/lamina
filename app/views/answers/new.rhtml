<h1>New answer</h1>

<%= error_messages_for :answer %>

<% form_for(:answer, :url => answers_path) do |f| %>
  <p>
    <b>Question</b><br />
    <%= f.text_field :question_id %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <b>Correct</b><br />
    <%= f.check_box :correct %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', answers_path %>