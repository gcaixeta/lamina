<h3>Editar Jogo</h3>

<%= error_messages_for :game %>

<% form_for(:game, :url => theme_game_path(@theme,@game), :html => { :method => :put }) do |f| %>


<%= render :partial => 'form', :locals => {:f => f} %>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Ver', theme_game_path(@theme,@game) %> |
<%= link_to 'Voltar', theme_games_path(@theme) %>
