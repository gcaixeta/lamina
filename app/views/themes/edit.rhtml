<center>
<h4>Editar Tema</h4>

<% form_for(:theme, 
            :url => theme_path(@theme), 
            :html => { :method => :put }) do |f| %>
            
  <%= render :partial => 'form', :locals => {:f => f} %>
   
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Ver', theme_path(@theme) %> |
<%= link_to 'Voltar', themes_path %>
</center>