<% remote_form_for(:question, :url => group_question_path(@group, @question), :html => { :method => :put }) do |f| %>
  <p>
    <label for="question_text">Editar Pergunta:</label><br />
    <%= f.text_area :text,  "cols" => 45, "rows" => 5 %>
  </p>

  <p>
    <%= submit_tag "Salvar" %>
  </p>
<% end %>


