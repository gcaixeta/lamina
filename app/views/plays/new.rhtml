<h1>New play</h1>

<%= error_messages_for :play %>

<% form_for(:play, :url => plays_path) do |f| %>
  <p>
    <b>Player</b><br />
    <%= f.text_field :player_id %>
  </p>

  <p>
    <b>Question</b><br />
    <%= f.text_field :question_id %>
  </p>

  <p>
    <b>Answer</b><br />
    <%= f.text_field :answer_id %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', plays_path %>